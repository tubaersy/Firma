@using FIRMA_MVC.Models;

@{
    ViewBag.Title = "Index";

    List<KATEGORI> kategori = ViewData["kategori"] as List<KATEGORI>;
    List<URUN> urun = ViewData["urun"] as List<URUN>;
}

<div id="urunsol" class="col-md-3">
    <ul class="nav flex-column">
        @foreach (var item in kategori)
        {
            <li class="nav-item">
                @Html.ActionLink(item.KATEGORI_ADI, "UrunListesi",
                                 new { kategoriid = item.KATEGORI_REFNO }, new { @class="nav-link"})
            </li>
            
        }
    </ul>
</div>

<div id="urunicerik" class="col-md-9">

    @foreach (var item in urun)
    {
        <div>
            @item.URUN_ADI
        </div>

        <div>
            <img src="~/images/@item.RESIM1" />
        </div>

        <div>
            @Html.Raw(@item.ACIKLAMA)
        </div>
    }

</div>

