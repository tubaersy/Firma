@using FIRMA_MVC.Models;
@{
    ViewBag.Title = "Index";

    List<SLIDER> slider = ViewData["slider"] as List<SLIDER>;

    List<URUN> urunler = ViewData["urunler"] as List<URUN>;

    List<PROJE> projeler = ViewData["projeler"] as List<PROJE>;
 }

    <div id="slider">

        <div class="bd-example">
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    @for (int i = 0; i < slider.Count; i++)
                    {
                        <div class="item @(i==0 ? "active" : "")">
                            <img src="~/images/slider/@slider[i].RESIM">
                            <div class="carousel-caption">
                                <p>@slider[i].BASLIK</p>
                                
                            </div>
                        </div>
                    }

                </div>
                <a class="left carousel-control" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

    </div>

    <div id="projeler" class="col-md-6">

        <div id="projebaslik">PROJELER</div>

        @foreach (var item in projeler)
        {
            <div class="proje">

                <div class="projeadi">@item.PROJE_ADI</div>
                <div class="projeresim"> <img src="~/images/proje/@item.RESIM"/></div>
                <div class="projedetay"><a href="/ProjeListe/Detay/@item.PROJE_REFNO">Detay</a></div>

            </div>
        }

    </div>

    <div id="urunler" class="col-md-6">

        <div id="urunbaslik">ÜRÜNLER</div>

        @foreach (var item in urunler)
        {
            <div class="urun">

                <div class="urunadi">@item.URUN_ADI</div>
                <div class="urunresim"> <img src="~/images/proje/@item.RESIM1" /></div>
                <div class="urundetay"><a href="/UrunListe/Detay/@item.URUN_REFNO">Detay</a></div>

            </div>
        }
    </div>