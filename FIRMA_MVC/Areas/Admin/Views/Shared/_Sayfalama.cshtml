@{
    int aktifsayfa = Convert.ToInt32(ViewData["aktifsayfa"]);

    int toplamsatir = Convert.ToInt32(ViewData["toplamsatir"]);
    int toplamsayfa = Convert.ToInt32(ViewData["toplamsayfa"]);

    string controllername = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    string actionname = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();

    if (toplamsatir == 0)
    {
        <div class="sayfalama">
            <a href="/Admin/@controllername/@actionname">İlk</a>
            <a href="/Admin/@controllername/@actionname">Geri</a>
            <input type="text" value="0" />
            <a href="/Admin/@controllername/@actionname">İleri</a>
            <a href="/Admin/@controllername/@actionname">Son</a>
        </div>
    }

    else
    {
        if (aktifsayfa == 0)
        {
            <div class="sayfalama">
                <a href="/Admin/@controllername/@actionname?aktifsayfa=0">İlk</a>
                <a href="/Admin/@controllername/@actionname?aktifsayfa=0">Geri</a>
                <input type="text" value="@aktifsayfa" />
                <a href="/Admin/@controllername/@actionname?aktifsayfa=@(@aktifsayfa+1)">İleri</a>
                <a href="/Admin/@controllername/@actionname?aktifsayfa=@(@toplamsayfa-1)">Son</a>
            </div>
        }
        else if (aktifsayfa == toplamsayfa - 1)
        {
            <div class="sayfalama">
                <a href="/Admin/@controllername/@actionname?aktifsayfa=0">İlk</a>
                <a href="/Admin/@controllername/@actionname?aktifsayfa=@(@aktifsayfa-1)">Geri</a>
                <input type="text" value="@aktifsayfa" />
                <a href="/Admin/@controllername/@actionname?aktifsayfa=@(@aktifsayfa+1)">İleri</a>
                <a href="/Admin/@controllername/@actionname?aktifsayfa=@(@toplamsayfa-1)">Son</a>
            </div>
        }
        else
        {
            <div class="sayfalama">
                <a href="/Admin/@controllername/@actionname?aktifsayfa=1">İlk</a>
                <a href="/Admin/@controllername/@actionname?aktifsayfa=@(@aktifsayfa-1)">Geri</a>
                <input type="text" value="@aktifsayfa" />
                <a href="/Admin/@controllername/@actionname?aktifsayfa=@(@aktifsayfa+1)">İleri</a>
                <a href="/Admin/@controllername/@actionname?aktifsayfa=@(@toplamsayfa-1)">Son</a>
            </div>
        }
    }
}

